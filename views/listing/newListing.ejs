<% layout('./layouts/boilerplate') -%>
<body style="background-color: #f8f9fa; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; ">

  <div style="padding-top: 3rem;">
    <form action="/listings" class="needs-validation" method="post" style="max-width: 600px; margin: auto; background-color: #ffffff; padding: 2rem; border-radius: 15px; box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08); display: flex; flex-direction: column; gap: 1rem; " novalidate enctype="multipart/form-data">
      <div style="display: flex; flex-direction: column;">
        <label for="validationCustom01" class="form-label" style="margin-bottom: 0.5rem; font-weight: 600; color: #333;">Title</label>
        <input type="text" class="form-control" name="listings[title]" placeholder="Enter the Title" style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 10px; font-size: 1rem;"  id="validationCustom01" required>
        <div class="invalid-feedback" style="margin-top: 0.5rem; color: #dc3545;">
          The Title is required
        </div>
      </div>
      <div style="display: flex; flex-direction: column;">
        <label for="priceInput" class="form-label" style="margin-bottom: 0.5rem; font-weight: 600; color: #333;">Price</label>
        <input type="text" class="form-control" name="listings[price]" placeholder="Enter the Price" style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 10px; font-size: 1rem;"  id="priceInput" required>
        <div class="invalid-feedback" style="margin-top: 0.5rem; color: #dc3545;">
          The Price is required
        </div>
      </div>
      <div style="display: flex; flex-direction: column;">
        <label for="imageInput" class="form-label" style="margin-bottom: 0.5rem; font-weight: 600; color: #333;">Upload Image URL</label>
        <input type="file" class="form-control" name="listings[image]"  style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 10px; font-size: 1rem;"  id="imageInput" required>
        <div class="invalid-feedback" style="margin-top: 0.5rem; color: #dc3545;">
          The Image is required
        </div>
      </div>
      <div style="display: flex; flex-direction: column;">
        <label for="locationInput" class="form-label" style="margin-bottom: 0.5rem; font-weight: 600; color: #333;">Location</label>
        <input type="text" class="form-control" name="listings[location]" placeholder="Enter the Location" style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 10px; font-size: 1rem;"  id="locationInput" required>
        <div class="invalid-feedback" style="margin-top: 0.5rem; color: #dc3545;">
          The Location is required
        </div>
      </div>
      <div style="display: flex; flex-direction: column;">
        <label for="countryInput" class="form-label" style="margin-bottom: 0.5rem; font-weight: 600; color: #333;">Country</label>
        <input type="text" class="form-control" name="listings[country]" placeholder="Enter the Country" style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 10px; font-size: 1rem;"  id="countryInput" required>
        <div class="invalid-feedback" style="margin-top: 0.5rem; color: #dc3545;">
          The Country is required
        </div>
      </div>
      <div style="display: flex; flex-direction: column;">
        <label for="descriptionInput" class="form-label" style="margin-bottom: 0.5rem; font-weight: 600; color: #333;">Description</label>
        <textarea name="listings[description]" class="form-control" placeholder="Enter the Description" rows="4" style="padding: 0.75rem; border: 1px solid #ccc; border-radius: 10px; font-size: 1rem; resize: vertical;"  id="descriptionInput" required></textarea>
        <div class="invalid-feedback" style="margin-top: 0.5rem; color: #dc3545;">
          The Description is required
        </div>
      </div>

      <button type="submit" style="padding: 0.75rem 1rem; background-color: #0d1b2a; color: #ffffff; border: none; border-radius: 10px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: background-color 0.3s ease;">
        Add Listing
      </button>
    </form>
  </div>
  <script>
    (() => {
      'use strict'

      const forms = document.querySelectorAll('.needs-validation')

      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }

          form.classList.add('was-validated')
        }, false)
      })
    })()
  </script>
</body>
</html>